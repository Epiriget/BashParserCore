@model BashParserCore.Models.Comment

<form action="~/Comments/Create" method="post">
    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ParentID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ParentID" readonly value ="@Model.ParentID" class="form-control" />
                <span asp-validation-for="ParentID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PostId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PostId" readonly value ="@Model.PostId" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
